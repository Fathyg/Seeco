            <div class="form-group">
                <label asp-for="ConsultantTeamId" class="control-label"></label>
                <select asp-for="ConsultantTeamId" class="form-control" asp-items="ViewBag.ConsultantTeamId"></select>
                <span asp-validation-for="ConsultantTeamId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Decisions" class="control-label"></label>
                <input asp-for="Decisions" class="form-control" />
                <span asp-validation-for="Decisions" class="text-danger"></span>
            </div>
            <div class="form-group">
                Upload: <input type="file" name="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-pid="@ViewBag.pid">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
